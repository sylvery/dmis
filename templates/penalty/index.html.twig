{% extends 'base.html.twig' %}

{% block title %}Penalty index{% endblock %}

{% block body %}
    <h1>Penalty index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for penalty in penalties %}
            <tr>
                <td>{{ penalty.id }}</td>
                <td>{{ penalty.name }}</td>
                <td>{{ penalty.description }}</td>
                <td>
                    <a href="{{ path('penalty_show', {'id': penalty.id}) }}">show</a>
                    <a href="{{ path('penalty_edit', {'id': penalty.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('penalty_new') }}">Create new</a>
{% endblock %}
