{% extends 'base.html.twig' %}

{% block title %}Patients{% endblock %}

{% block body %}
    {% set newClientUrl = ea_url()
        .setController('App\\Controller\\Admin\\ClientCrudController')
        .setAction('new')
    %}
    <section class="container">
        <div class="row">
            <div class="col-12 mb-5">
                <h1>Patients</h1>
                <a class="btn btn-success" href="{{newClientUrl}}"><i class="fa fa-paper-plane" aria-hidden="true"></i> &nbsp; register a new patient</a>
            </div>
            <div class="col-12 mb-5">
                <table class="table table-striped table-hover table-sm border border-dark">
                    <thead class="bg-dark text-light inverse thead-inverse">
                        <tr>
                            <th>Client</th>
                            <th>Employer</th>
                            <th>Insuranceprovider</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.fname }} {{ client.lname }}<br />
                            <span class="text-secondary small">{{ client.phone }}<br />
                            {{ client.email }}<br /></span>
                            <td>{{ client.employer }}<br />
                            <span class="text-muted small">{{ client.jobtitle }}</td>
                            <td>{{ client.insuranceprovider }}</td>
                            <td>
                                <a class="btn btn-dark btn-sm" href="{{ path('client_show', {'id': client.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i> &nbsp; view client details</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
