{% extends 'base.html.twig' %}

{% block title %}Sale{% endblock %}

{% block body %}
<section class="section-bg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <p class="h1 display-1">Sales Reporting</p>
                <p class="text-secondary">Welcome to the Sales Report Page</p>
            </div>
            <div class="col-12">
                <form class="row">
                    <div class="form-group row col-6">
                        <label for="startDate" class="col-sm-4 col-form-label">Start Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" name="startDate" id="startDate" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row col-6">
                        <label for="endDate" class="col-sm-4 col-form-label">End Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" name="endDate" id="endDate" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-success">get sales reports</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-12">
                <pre>
                    {{ dump() }}
                </pre>
            </div>
        </div>
    </div>
</section>
{% endblock %}
