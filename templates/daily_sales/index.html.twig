{% extends 'base.html.twig' %}

{% block title %}Daily Sales Report{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="h1 display-3 text-muted">Daily Sales Report</p>
                <div class="row">
                    <div class="col-md-8">
                        <table class="table table-striped table-hover table-success">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>Date</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Amount (K)</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set totalSales = 0 %}
                                {% set totalItems = 0 %}
                                {% for entry in entries %}
                                    <tr>
                                        <td scope="row">{{entry.date|date("jS M")}}</td>
                                        <td>{{entry.item.name}}</td>
                                        <td>{{entry.quantity}}</td>
                                        <td>{{entry.amount|number_format(2, '.', ',')}}</td>
                                        {% set totalSales = totalSales + entry.amount %}
                                        {% set totalItems = totalItems + entry.quantity %}
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td scope="total" class="total">Total</td>
                                    <td></td>
                                    <td>{{totalItems}}</td>
                                    <td>{{totalSales|number_format(2, '.', ',')}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <img class="card-img-top" src="holder.js/100x180/" alt="">
                            <div class="card-body">
                                <h4 class="card-title">Title</h4>
                                <p class="card-text">Text</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
